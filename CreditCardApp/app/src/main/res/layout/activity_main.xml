<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff000000">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/verlay">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Enter Card Balance ($)"
                android:id="@+id/card_bal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/bal_card"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Enter Yearly Interest Rate (%)"
                android:id="@+id/int_rate"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:singleLine="true" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/rate_int"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Enter Minimum Payment ($)"
                android:id="@+id/min_pay"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/pay_min"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:weightSum="1"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Final Card Balance ($)"
                android:id="@+id/fin_bal"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/bal_fin"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Months Remaining"
                android:id="@+id/mon_rem"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/rem_mon"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.15"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Interest Paid Will Be ($)"
                android:id="@+id/int_paid"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:textColor="#ffffffff"
                android:autoText="false" />

            <EditText
                android:layout_width="130dp"
                android:layout_height="36dp"
                android:id="@+id/paid_int"
                android:textColor="#ffffffff"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compute"
            android:id="@+id/button"
            android:layout_weight="0.04"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear"
            android:id="@+id/button2"
            android:layout_weight="0.04"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
